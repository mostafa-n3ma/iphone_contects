<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.KeypadFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:foregroundGravity="center"
    app:layout_anchorGravity="center"
    android:gravity="center"

    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/dail_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Add Number"
        android:visibility="invisible"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="#2967D1"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dail_number" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="553dp"
        android:orientation="vertical"
        android:paddingTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_number"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/l1"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shap_numbtn"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shap_numbtn"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="A B C"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shap_numbtn"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="D E F"
                    android:textSize="12dp"

                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shap_numbtn"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="G H I"
                    android:textSize="12dp"

                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l5"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shap_numbtn"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="J K L"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l6"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shap_numbtn"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="M N O"
                    android:textSize="12dp"

                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/l7"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shap_numbtn"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="7"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="P Q R S"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l8"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shap_numbtn"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="8"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="T U V"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l9"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shap_numbtn"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="9"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="35dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="W X Y Z"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/r_star"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shap_numbtn"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="*"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="50dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/l0"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shap_numbtn"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|bottom"
                    android:text="+"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/r_H"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/shap_numbtn"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="#"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="50dp" />

            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/call_btn"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shap_call_btn"
                android:src="@drawable/callxx" />

            <ImageButton
                android:id="@+id/back_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:background="@color/white"
                android:src="@drawable/backspace" />



        </RelativeLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
    <include layout="@layout/add_contact_bottom_sheet"
        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>